<div class="createShelter">
  <h3>Add a new shelter:</h3>
  <div class="formAlign">
    <%= form_tag '/shelters', method: :post do %>
      <div class="formField">
        <%= label_tag :name %>
        <%= text_field_tag :name %>
      </div>  

      <div class="formField">
        <%= label_tag :address %>
        <%= text_field_tag :address %>
      </div>

      <div class="formField">
        <%= label_tag :city %>
        <%= text_field_tag :city %>
      </div>

      <div class="formField">
        <%= label_tag :state %>
        <%= text_field_tag :state %>
      </div>

      <div class="formField">
        <%= label_tag :zip %>
        <%= text_field_tag :zip %>
      </div>

      <div class="formField">
        <%= submit_tag 'Create Shelter' %>
      </div>
    <% end %>
</div>
