<% @pets.each do |pet| %>
  <div class="petIndexBlock">
    <h3><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h3>
    <div class="effect2"><%= image_tag(pet.image) %></div>
    <p>Age: <%= pet.age %></p>
    <p>Sex: <%= pet.sex %></p>
    <p>Description: <%= pet.description %></p>
    <p>Status: <%= pet.status %></p>
    <p><%= link_to "#{@shelters.find(pet.shelter_id)[:name]}", "/shelters/#{pet.shelter_id}" %></p>
    <p class="ptagInline" id=<%= "pet_#{pet.id}" %>><%= link_to 'Edit Pet', "/pets/#{pet.id}/edit" %></p>
    <p class="ptagInline" id=<%= "delete_#{pet.id}" %>><%= link_to 'Delete', "/pets/#{pet.id}", method: :delete %></p>
  </div>
<% end %>
